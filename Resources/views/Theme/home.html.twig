    <div class="container">
      <div class="content-title-1">    
        {% block content_title_1 %}    
            {# BEGIN-SLOT
                name: content_title_1
                repeated: page
                htmlContent: |
                    <h2>Our products</h2>
            END-SLOT #}
            {{ renderSlot('content_title_1') }}  
        {% endblock %}
      </div>
      <div class="row-fluid">   
        {% block content_body_1 %} 
            {# BEGIN-SLOT
                name: content_body_1
                repeated: page
                blockType: BootstrapThumbnailBlock
            END-SLOT #}
            {{ renderSlot('content_body_1') }}
        {% endblock %}
      </div>
      <div class="page-header">  
        {% block content_title_2 %} 
            {# BEGIN-SLOT
                name: content_title_2
                repeated: page
                htmlContent: |
                    <h2>Our Services</h2>
            END-SLOT #}
            {{ renderSlot('content_title_2') }}
        {% endblock %}
      </div>
      <div class="row-fluid">
