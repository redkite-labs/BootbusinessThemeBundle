<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">


    <services>
        <service id="bootbusiness_theme.theme.template_assets.product" class="%alpha_lemon_theme_engine.template_assets.class%">
        </service>

        <service id="bootbusiness_theme.theme.template.product.slots" class="%alpha_lemon_theme_engine.template_slots.class%">
            <tag name="bootbusiness_theme.theme.template.product" />
        </service>

        <service id="bootbusiness_theme.theme.template.product" class="%alpha_lemon_theme_engine.template.class%">
            <argument type="service" id="kernel" />
            <argument type="service" id="bootbusiness_theme.theme.template_assets.product" />
            <argument type="service" id="bootbusiness_theme.theme.template.product.slots" />
            <tag name="bootbusiness_theme.theme.template" />

            <call method="setThemeName">
                <argument type="string">BootbusinessThemeBundle</argument>
            </call>
            <call method="setTemplateName">
                <argument type="string">product</argument>
            </call>
        </service>
    </services>
</container>