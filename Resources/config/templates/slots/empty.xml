<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="bootbusiness_theme.theme.template.empty.slots.page_title" class="%alpha_lemon_theme_engine.slot.class%">
            <argument type="string">page_title</argument>
            <argument type="collection" >
                <argument key="htmlContent">
                    <![CDATA[<h1>Page title<small>Subtitle</small></h1>]]>
                </argument>
            </argument>
            <tag name="bootbusiness_theme.theme.template.empty.slots" />
        </service>
        <service id="bootbusiness_theme.theme.template.empty.slots.content" class="%alpha_lemon_theme_engine.slot.class%">
            <argument type="string">content</argument>
            <tag name="bootbusiness_theme.theme.template.empty.slots" />
        </service>
    </services>
</container>